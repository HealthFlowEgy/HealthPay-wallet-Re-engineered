{
  "name": "@healthpay/api-gateway",
  "version": "1.0.0",
  "description": "HealthPay API Gateway - Kong-based gateway with WebSocket support",
  "main": "dist/gateway.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/gateway.ts",
    "build": "tsc",
    "start": "node dist/gateway.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "api-gateway",
    "kong",
    "websocket",
    "circuit-breaker",
    "rate-limiting"
  ],
  "author": "HealthPay Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "http-proxy-middleware": "^2.0.6",
    "axios": "^1.6.0",
    "ioredis": "^5.3.2",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "prom-client": "^15.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.9",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
