# Query Service Configuration

# Service
NODE_ENV=development
PORT=4000
SERVICE_NAME=query-service

# GraphQL
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true

# PostgreSQL (Event Store & Read Models)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=healthpay_ledger
POSTGRES_USER=healthpay
POSTGRES_PASSWORD=healthpay_secret_2024

# ScyllaDB (Projections)
SCYLLA_HOSTS=localhost
SCYLLA_PORT=9042
SCYLLA_KEYSPACE=healthpay_projections
SCYLLA_DATACENTER=datacenter1
SCYLLA_USERNAME=cassandra
SCYLLA_PASSWORD=cassandra

# Kafka/Redpanda (Event Streaming)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=query-service
KAFKA_GROUP_ID=query-service-group
KAFKA_TOPICS=wallet-events,payment-events,medcard-events

# Redis (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true
